<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".HomeKu2Ba">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_ku2ba_biru"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(KU2BA)"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/margot_bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buku Saku Bahasa Arab"
                android:textSize="16dp"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/margot_bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VERSI 1.0"
                android:textSize="13.5dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/margot_bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Assalamu'alikum wr. wb."
                android:textColor="@color/color_ui_black"
                android:lineSpacingExtra="7dp"
                android:fontFamily="@font/stratos_light_regular"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"/>
            <com.codesgood.views.JustifiedTextView
                android:id="@+id/tv_justified_paragraph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_tentang_aplikasi"
                android:fontFamily="@font/stratos_light_regular"
                android:textColor="@color/color_ui_black"
                android:lineSpacingExtra="8dp"
                android:textSize="15sp"
                />
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:layout_below="@id/appBar"
                android:textSize="14dp"
                android:textStyle="bold"
                android:fontFamily="@font/stratos_regular"
                android:textColor="@color/color_ui_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hak Cipta 2019"/>
            <TextView
                android:textAlignment="center"
                android:justificationMode="inter_word"
                android:layout_marginTop="7dp"
                android:layout_below="@id/appBar"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/stratos_light_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ARDELINGGA PRAMESTA KUSUMA"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
    <ImageView
        android:layout_width="120dp"
        android:layout_height="37dp"
        android:id="@+id/fatah_ya"
        android:layout_gravity="center"
        android:src="@drawable/icon_powered"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>