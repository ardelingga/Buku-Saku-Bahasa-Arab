<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eeeeee"
    tools:context=".Java.Test3Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sinonim Fragment"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_kata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="يَدٌ"
                    android:textColor="@color/color_ui_black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#eeeeee"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_makna1"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:textAlignment="center"
                            android:lineSpacingExtra="10dp"
                            android:textColor="@color/color_ui_black"
                            android:fontFamily="@font/stratos_regular"
                            android:text="قوة"/>
                        <TextView
                            android:id="@+id/tv_arti_makna1"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/stratos_regular"
                            android:textSize="14dp"
                            android:textAlignment="center"
                            android:lineSpacingExtra="10dp"
                            android:textColor="@color/color_ui_black"
                            android:text="Kekuasaan"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_makna2"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:textAlignment="center"
                            android:lineSpacingExtra="10dp"
                            android:textColor="@color/color_ui_black"
                            android:fontFamily="@font/stratos_regular"
                            android:text="عضو"/>
                        <TextView
                            android:id="@+id/tv_arti_makna2"
                            android:layout_marginTop="5dp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/stratos_regular"
                            android:textSize="14dp"
                            android:lineSpacingExtra="10dp"
                            android:textColor="@color/color_ui_black"
                            android:text="Tangan, organ tubuh"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_hasil_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="makan"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>